<!-- res/layout/uploaded_file_item.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- File Name -->
    <TextView
        android:id="@+id/fileNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <!-- Red Delete Button -->
    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"/> <!-- Add some margin between the name and button -->

    <!-- File Link -->
    <TextView
        android:id="@+id/fileLinkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File Link"
        android:textSize="14sp"
        android:paddingTop="20sp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@id/fileNameTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"/> <!-- Add some margin at the top -->
</RelativeLayout>